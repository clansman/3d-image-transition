html
  // background-image linear-gradient(#222222, #555555)
  background-color #000
  min-height 100%
  font-size 0.8em
  text-align center
  color white

p
  padding-top 20px

.tile
  position absolute
  animation-duration 1s
  -webkit-animation-duration 1s
  // transition 1s
  backface-visibility hidden
  &.hoverable
    transition: all 1500ms cubic-bezier(0.190, 1.000, 0.220, 1.000)
    // transform: translateY(0) scale(0.95, 0.95);
  &.hoverable.hovered
    box-shadow 0px 5px 13px 6px rgba(0, 0, 0, 0.10);
    transform translateY(-5px) scale(1.07, 1.07);
    z-index: 1
  &.hoverable.hovered2
    box-shadow 0px 5px 9px 6px rgba(0, 0, 0, 0.05);
    transform translateY(-2px) scale(1.05, 1.05);
    z-index: 1
  &.changingBackground
    transition 0s
    transition-delay 0.5s
  &.flip
    animation-name doit, border, opacity
    -webkit-animation-name doit, border, opacity

#tile
  background #000 

#flippers
  margin-bottom 20px
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin auto

@keyframes lift {
  0%  {
    box-shadow none
    transform translateY(0) scale(1, 1)
  }
  100%{
    box-shadow 0px 5px 13px 6px rgba(255, 255, 255, 0.22)
    transform translateY(-5px) scale(1.1, 1.1)
  }
}

@keyframes doit {
  0% {
    transform: rotateY(0deg) rotate(0deg) scale(1);
  }
  49.9% {
    transform: rotateY(90deg) rotate(0deg) scale(0.9);
  }
  50% {
    transform: rotateY(270deg) rotate(0deg) scale(0.9);
  }
  100% {
    transform: rotateY(360deg) rotate(0deg) scale(1);
  }
}
@keyframes border {
  10% {
    border-radius: 0%;
  }
  20% {
    border-radius: 25%;
  }
  80% {
    border-radius: 25%;
  }
  90% {
    border-radius: 0%;
  }
}
@keyframes opacity {
  0% {
    opacity: 1;
  }
  30% {
    opacity: 0.8;
  }
  49% {
    opacity: 0;
  }
  51% {
    opacity: 0;
  }
  70% {
    opacity: 0.8;
  }
  100% {
    opacity: 1;
  }
}
